<div class="container">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <div class="mt-3">
                  <% if(locals.employeeInfo){ %>
                      
                      <img src="data:image/<%=employeeInfo.img.contentType%>;base64,<%=employeeInfo.img.data.toString('base64')%>" alt="Admin" class="rounded-circle" width="150">
                    <h4>
                      <%=employeeInfo.fullname%>
                    </h4>
                    
  
                    <%}%>
                </div>
              </div>
            </div>
          </div>
  
       
        </div>
        <% if(locals.employeeInfo){ %>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Full Name</h6>
                  </div>
                  <p style="border: none;" type="none"
                    class="col-sm-9 text-secondary"><%= employeeInfo.fullname %></p>
  
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    <p style="border: none;" type="text"
                      class="col-sm-9 text-secondary"><%= employeeInfo.email %></p>
                  </div>
                </div>
  
  
  
                
                <% } %>
              </div>
            </div>
          </div>
      </div>
  
    </div>
  </div>
