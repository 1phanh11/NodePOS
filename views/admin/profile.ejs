<div class="container">
  <div class="main-body">
    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <div class="mt-3">
                <% if(locals.infoProfileAdmin){ %>
                  <img src="data:image/<%=infoProfileAdmin.img.contentType%>;base64,<%=infoProfileAdmin.img.data.toString('base64')%>" alt="Admin" class="rounded-circle" width="150">
                  <h4>
                    <%=infoProfileAdmin.fullname%>
                  </h4>
                  <p class="text-secondary mb-1">Hello Admin</p>
                  <form method="post" enctype="multipart/form-data">
                    <label class="custom-file-upload mt-3">
                      <input style="display: none" name="idAdmin" value="<%=infoProfileAdmin._id %>">
                      <input class="mt-3" name="image" type="file" accept="image/*" required>
                      <button class="btn-lg btn-primary mt-4" type="submit">Upload</button>
                    </label>
                  </form>

                  <%}%>
              </div>
            </div>
          </div>
        </div>

     
      </div>
      <% if(locals.infoProfileAdmin){ %>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <input value="<%= infoProfileAdmin.fullname %>" style="border: none;" type="text"
                  class="col-sm-9 text-secondary">

              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <input value="<%= infoProfileAdmin.email %>" style="border: none;" type="text"
                    class="col-sm-9 text-secondary">
                </div>
              </div>



              <div class="row mt-5">
                <div class="col-sm-12">
                  <div class="btn btn-info btn-change-password" id="<%= infoProfileAdmin._id%>" onclick="changePassword()" target="__blank" >Đổi mật
                    khẩu</div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
    </div>

  </div>
</div>
<script>
  function changePassword(){
    let root = window.location.origin;
    window.location.href = `${root}/admin/changePassword`
  }


</script>